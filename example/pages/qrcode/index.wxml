<!-- 存放二维码的图片-->
<view class='container'>
  <image
    bindtap="previewImg"
    mode="scaleToFill"
    src="{{imagePath}}"
  ></image>
</view>

<!-- 画布，用来画二维码，只用来站位，不用来显示-->
<view class="canvas-box">
  <canvas
    hidden="{{canvasHidden}}"
    style="width: 600rpx;height: 600rpx;background:#f1f1f1;"
    canvas-id="mycanvas"
  />
</view>

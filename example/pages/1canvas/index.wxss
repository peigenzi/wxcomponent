.moment-root {
  width: 100%;
  z-index: 11;
}

.btn-share {
  margin: 40rpx;
  background-color: #3385ff;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
}

.canvas {
  width: 100%;
}

.share-model .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  min-height: 100vh;
  z-index: 99;
  background: rgba(0, 0, 0, .6);
}

.share-content {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 80rpx;
  padding-bottom: 80rpx;
  left: 10%;
  right: 10%;
  z-index: 100;
  top: 0;
}

.share-image {
  border-radius: 10rpx;
}

.btn-save-local {
  background: linear-gradient(45deg, #FB653D, #ff555c);
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
  color: #ffffff;
  font-size: 32rpx;
  border: none;
}

.close-wrapper {
  position: fixed;
  right: 5%;
  top: 10rpx;
  padding: 20rpx;
  z-index: 101;
}
